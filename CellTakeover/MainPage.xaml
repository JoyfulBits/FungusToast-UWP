<Page
    x:Class="CellTakeover.MainPage"
    xmlns:viewmodel="using:CellTakeover"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CellTakeover"
    xmlns:logic="using:Logic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <UserControl.Resources>
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    </UserControl.Resources>

    <Grid Padding="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="13*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Name="GrowButton" Grid.Row="0" Grid.Column="0" Click="Grow_OnClick" 
                ToolTipService.ToolTip="Trigger the next generation of cell growth" Content="Grow!" 
                ToolTipService.Placement="Right"
                FontSize="40" HorizontalAlignment="Center"></Button>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Style="{StaticResource HeaderTextBlockStyle}" 
                Text="Cell Takeover" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" 
                        Style="{StaticResource SubtitleTextBlockStyle}" 
                        Text="Generation Number:"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="1"
                        Style="{StaticResource SubtitleTextBlockStyle}" 
                        Text="{x:Bind ViewModel.GenerationNumber, Mode=OneWay}"></TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           Text="Total Live Cells:" ></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           Text="{x:Bind ViewModel.TotalLiveCells, Mode=OneWay}"></TextBlock>

                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           Text="Total Dead Cells:" ></TextBlock>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           Text="{x:Bind ViewModel.TotalDeadCells, Mode=OneWay}"></TextBlock>
            </Grid>
        </Grid>


        

        <ListView Grid.Row="2" Grid.Column="0" ItemsSource="{x:Bind ViewModel.Players, Mode=OneWay}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:Name="PlayerDataTemplate" x:DataType="logic:Player">
                    <StackPanel Name="{x:Bind PlayerNumber}"  Padding="5" BorderThickness="1" BorderBrush="Black" Margin="0 0 0 5" Orientation="Horizontal" Loaded="PlayerStackPanel_Loaded">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">

                                <Rectangle Fill="{x:Bind Color, Converter={StaticResource ColorToBrushConverter}, Mode=OneWay}" 
                                           Margin="5" Width="20" Height="20" 
                                           VerticalAlignment="Center"></Rectangle>

                                <TextBlock Text="{x:Bind Name}" Style="{StaticResource TitleTextBlockStyle}" 
                                           VerticalAlignment="Center"></TextBlock>

                                <TextBlock Text="{x:Bind CharacterSymbol}" Style="{StaticResource TitleTextBlockStyle}"></TextBlock>
                            </StackPanel>

                            <TextBlock Text="Growth Scorecard" HorizontalAlignment="Center"></TextBlock>

                            <controls:UniformGrid Width="120" Height="120">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <controls:UniformGrid.Resources>
                                    <x:String x:Key="GrowthScorecardTooltip">% chance that a cell will grow into this position relative to another live cell. Each attribute point increases this value by +2%.</x:String>
                                    <Style TargetType="Button" x:Key="GrowthScorecardButtonStyle">
                                        <Setter Property="BorderBrush" Value="Black"></Setter>
                                        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                                        <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
                                        <Setter Property="ToolTipService.ToolTip" Value="{StaticResource GrowthScorecardTooltip}"></Setter>
                                    </Style>
                                </controls:UniformGrid.Resources>

                                <!-- If BorderThickness is not set to 1 here then none of the text binds in the grid. If I set it to 2 or don't set it
                                at all then it doesn't work. I can't set the value in the .Resources above for this reason. NO FREAKING IDEA WHAT'S GOING ON HERE!!-->
                                <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource GrowthScorecardButtonStyle}" BorderThickness="1"
                                            Content="{x:Bind TopLeftGrowthChance, Mode=OneWay}">
                                </Button>
                                <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource GrowthScorecardButtonStyle}"
                                            Content="{x:Bind TopGrowthChance, Mode=OneWay}">
                                </Button>
                                <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource GrowthScorecardButtonStyle}"
                                            Content="{x:Bind TopRightGrowthChance, Mode=OneWay}">
                                </Button>
                                <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource GrowthScorecardButtonStyle}"
                                            Content="{x:Bind LeftGrowthChance, Mode=OneWay}">
                                </Button>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Rectangle 
                                               Fill="{x:Bind Color, Converter={StaticResource ColorToBrushConverter}, Mode=OneWay}" 
                                               Stretch="Fill"></Rectangle>
                                    <TextBlock Text="{x:Bind CharacterSymbol}" 
                                               TextAlignment="Center" VerticalAlignment="Center"
                                               Style="{StaticResource TitleTextBlockStyle}"></TextBlock>
                                </Grid>


                                <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource GrowthScorecardButtonStyle}"
                                            Content="{x:Bind RightGrowthChance, Mode=OneWay}">
                                </Button>
                                <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource GrowthScorecardButtonStyle}"
                                            Content="{x:Bind BottomLeftGrowthChance, Mode=OneWay}">
                                </Button>
                                <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource GrowthScorecardButtonStyle}"
                                            Content="{x:Bind BottomGrowthChance, Mode=OneWay}">
                                </Button>
                                <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource GrowthScorecardButtonStyle}"
                                            Content="{x:Bind BottomRightGrowthChance, Mode=OneWay}">
                                </Button>

                            </controls:UniformGrid>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Σ" Width="22" TextAlignment="Center"></TextBlock>
                                <TextBlock Text="Total Cells:"></TextBlock>
                                <TextBlock Text="{x:Bind TotalCells, Mode=OneWay}" Margin="5 0 0 0" Style="{StaticResource BaseTextBlockStyle}"></TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="☠" Width="22" TextAlignment="Center"></TextBlock>
                                <TextBlock Text="Dead Cells:"></TextBlock>
                                <TextBlock Text="{x:Bind DeadCells, Mode=OneWay}" Margin="5 0 0 0" Style="{StaticResource BaseTextBlockStyle}" ></TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <Grid>
                            <Grid.Resources>
                                <Style TargetType="Button" x:Key="MutationOptionButtonStyle">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                                    <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
                                    <Setter Property="Margin" Value="5 0 0 0"></Setter>
                                    <Setter Property="MaxHeight" Value="30"></Setter>
                                    <Setter Property="MaxWidth" Value="30"></Setter>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Mutation Chance:" VerticalAlignment="Center"></TextBlock>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind MutationChancePercentage, Mode=OneWay}" Margin="5 0 0 0" Style="{StaticResource BaseTextBlockStyle}"  
                                       VerticalAlignment="Center"></TextBlock>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="%" Style="{StaticResource BaseTextBlockStyle}" 
                                       VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                            <Button Grid.Row="0" Grid.Column="2" Name="MutationChanceButton"
                                    Style="{StaticResource MutationOptionButtonStyle}"
                                    IsEnabled="False" 
                                    Content="+" ToolTipService.ToolTip="{x:Bind AddMutationChanceMessage, Mode=OneTime}" 
                                    Loaded="MutationOptionButton_Loaded"
                                    Click="IncreaseMutationChance_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Healthy Cell Death Chance:" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind HealthyCellDeathChancePercentage, Mode=OneWay}" Margin="5 0 0 0" 
                                       Style="{StaticResource BaseTextBlockStyle}"  
                                       VerticalAlignment="Center"></TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="%" Style="{StaticResource BaseTextBlockStyle}"  HorizontalAlignment="Right"
                                       VerticalAlignment="Center"></TextBlock>
                            <Button Grid.Row="1" Grid.Column="2" Name="HealthyCellDeathChanceButton"
                                    Style="{StaticResource MutationOptionButtonStyle}"
                                    IsEnabled="False" 
                                    Content="-" 
                                    ToolTipService.ToolTip="{x:Bind ReduceCellDeathChanceMessage, Mode=OneTime}"
                                    Loaded="MutationOptionButton_Loaded"
                                    Click="ReduceHealthyCellDeathChance_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"  Text="Corner Growth Chance:" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>
                            <Button Grid.Row="2" Grid.Column="2" Name="CornerGrowthButton"
                                    Style="{StaticResource MutationOptionButtonStyle}"
                                    IsEnabled="False" 
                                    Content="+" ToolTipService.ToolTip="{x:Bind AddCornerGrowthChanceMessage, Mode=OneTime}" 
                                    Loaded="MutationOptionButton_Loaded"
                                    Click="IncreaseCornerGrowthChance_Click"/>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <controls:UniformGrid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Name="MainGrid" Loaded="MainGrid_Loaded" BorderThickness="1"></controls:UniformGrid>
    </Grid>
</Page>
